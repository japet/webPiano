{
  "name": "web-piano",
  "description": "An interactive piano web component with configurable range, multi-touch support, and MIDI input",
  "license": "MIT",
  "author": "web-piano",
  "version": "0.3.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./web-piano.js": {
      "types": "./dist/web-piano.d.ts",
      "default": "./dist/web-piano.js"
    }
  },
  "files": [
    "dist/",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "web-dev-server",
    "start": "web-dev-server",
    "test": "web-test-runner",
    "analyze": "cem analyze --litelement",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@web/dev-server": "^0.4.0",
    "@web/dev-server-esbuild": "^1.0.0",
    "@web/test-runner": "^0.18.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "customElements": "custom-elements.json"
}
